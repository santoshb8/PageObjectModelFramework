<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart Regression Suite" verbose="3"
       parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="com.qa.opencart.listeners.ExtentReportListener" />
        <listener class-name="com.qa.opencart.listeners.TestAllureListener" />
        <listener class-name="com.qa.opencart.listeners.AnnotationTransformer" />
    </listeners>
    <test name="Login Page Test chrome">
<parameter name="browser" value="chrome" />
        <parameter name="browserversion" value="113.0" />
        <parameter name="testname" value="opencart-Login Page Test" />
        <classes>
            <class name="com.qa.opencart.test.LoginPageTest" />
        </classes>
    </test>
    <test name="Login Page Test2 chrome">
        <parameter name="browser" value="chrome" />
        <parameter name="browserversion" value="123.0" />
        <parameter name="testname" value="opencart-Login Page Test2" />
        <classes>
            <class name="com.qa.opencart.test.LoginPageTest" />

        </classes>
    </test>
    <test name="Accounts Page Test">
        <parameter name="browser" value="chrome" />
        <parameter name="browserversion" value="124.0" />
        <parameter name="testname" value="opencart-Accounts Page Test" />

        <classes>
            <class name="com.qa.opencart.test.AccountsPageTest" />
        </classes>
    </test>
    <test name="SearchPage Page Test">
        <parameter name="browser" value="chrome" />
        <parameter name="browserversion" value="90.0" />
        <parameter name="testname" value="SearchPage" />
        <classes>
            <class name="com.qa.opencart.test.SearchResultsPageTest" />
        </classes>
    </test>
      <test name="Productinfo Page Test">
          <parameter name="browser" value="chrome" />
          <parameter name="browserversion" value="90.0" />
          <parameter name="testname" value="Productinfo Page Test" />
        <classes>
            <class name="com.qa.opencart.test.ProductInfoPageTest" />
            <class name="com.qa.opencart.test.ProductInfoPageTest" />
        </classes>
